<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png")%>	
		<%=@page_title || "Pragmatic BookShelf"%>
	</div>	
		<div id="columns">
			<div id="side" >
				<a href="#" >Home</a><br />
				<a href="#" >Questions</a><br />
				<a href="#" >News</a><br />
				<a href="#" >Contact</a><br />
					<div id="time">
					<% @time = Time.now%>
					<%= @time.to_s(:short) %>	
					</div>
			</div>
	
				<div id="main">	
					<%= yield %>
				</div>
		</div>	
</body>
</html>



